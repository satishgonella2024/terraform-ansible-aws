pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-credentials') // Replace with your Jenkins AWS credentials ID
        AWS_SECRET_ACCESS_KEY = credentials('aws-credentials')
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:satishgonella2024/terraform-ansible-aws.git' // Replace with your GitHub repo URL
            }
        }
        stage('Terraform Init') {
            steps {
                dir('terraform/live/dev') {
                    sh 'terraform init'
                }
            }
        }
        stage('Terratest') {
            steps {
                dir('terraform/terratest') {
                    sh '''
                    go mod tidy
                    go test -v
                    '''
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                dir('terraform/live/dev') {
                    sh 'terraform plan -out=tfplan'
                }
                script {
                    // Ensure tfplan file exists and show its content for approval
                    if (fileExists('terraform/live/dev/tfplan')) {
                        def planOutput = sh(
                            script: 'terraform show -json tfplan | jq .',
                            returnStdout: true
                        )
                        writeFile file: 'plan-output.json', text: planOutput
                    } else {
                        error "Terraform plan file 'tfplan' not found!"
                    }
                }
            }
        }
        stage('Approval') {
            steps {
                script {
                    def planChanges = readFile('plan-output.json')
                    input message: "Approve Terraform plan? Changes:\n${planChanges}"
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                dir('terraform/live/dev') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline complete!'
        }
        cleanup {
            echo 'Cleanup stage...'
        }
    }
}
